<div class="col-md-12" id="articles">

  {{#each articles}}

  <div id={{this.id}}>
    <div class="card">
      <h4 class="card-header">{{this.title}}</h4>
      <div class="card-body">
        <p class="card-text">{{this.summary}}</p>
        <button class="btn btn-success" id="save" data-id={{this.id}}>Save</button>
      </div>
    </div>
  </div>

  {{/each}}

  {{#if articles}}
  <footer class="footer">
    <div class ="container">
      <button type="button" class="btn" id="clear">Clear</button>
    </div>
  </footer>

  {{else}}
    <div class="card">
      <h3 class="card-header text-center">
        You don't have any news articles.
      </h3>
    </div>
  {{/if}}

</div>
</div>